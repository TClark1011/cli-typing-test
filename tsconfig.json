{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"$*": ["./src/*"]
		}
	},
	"include": ["./src"],
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}
