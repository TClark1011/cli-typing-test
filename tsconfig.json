{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"jsx": "react-jsx",
		"baseUrl": "./src",
		"paths": {
			"$*": ["./*", "./lib/*"]
		},
		"outDir": "./build",
		"moduleResolution": "Node"
	},
	"include": ["./src"],
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}
